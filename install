#!/usr/bin/env python3
import os, shutil, site

current = os.path.dirname(os.path.abspath(__file__))

try:
    packagesDir = site.getsitepackages()[0]
except AttributeError:
    packagesDir = site.getusersitepackages()

print(f"installing py-utils from fxos to {packagesDir} ...")

target = os.path.join(packagesDir, "ml")

if os.path.exists(target):
    print("old version of py-utils found. Removing it.")
    shutil.rmtree(target)

shutil.copytree(current, target)
print("py-utils from fxos installed.")
