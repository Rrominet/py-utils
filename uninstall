#!/usr/bin/env python3
import os
import shutil
import site

try:
    packagesDir = site.getsitepackages()[0]
except AttributeError:
    packagesDir = site.getusersitepackages()

installDir = packagesDir + "/ml"

if not os.path.exists(installDir) : 
    print ("py-utils not installed.")
else : 
    shutil.rmtree(installDir)
    print ("py-utils uninstalled.")
